

class TimeLine
{
 private:
  enum Action {move, eat, change, NONE};
  
  Action* act;
  Piece** piece;

  struct Instance
  {
    Action a;
    Piece* p;
  }
  
  int max_size;
  int size;
 public:
  TimeLine();
  ~TimeLine();

  void add_instance_on_top(Piece*,Action);
  void ad_instance_at(Piece*,Action,int);
  void update_at(Piece*,Action,int);
  void remove_at(int);
  
  Instance get_instance_at(int);

  void resize();
}
